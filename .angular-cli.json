{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"project": {
		"name": "apollo"
	},
	"apps": [
		{
			"root": "src/main/webapp",
			"outDir": "build/www",
			"assets": [
				"assets",
				"i18n",
				"favicon.ico"
			],
			"index": "index.html",
			"main": "main.ts",
			"polyfills": "polyfills.ts",
			"test": "test.ts",
			"tsconfig": "tsconfig.app.json",
			"testTsconfig": "tsconfig.spec.json",
			"prefix": "awf",
			"styles": [
				"styles.css"
			],
			"scripts": [
				"scripts.js"
			],
			"environmentSource": "environments/environment.ts",
			"environments": {
				"dev": "environments/environment.ts",
				"prod": "environments/environment.prod.ts"
			}
		}
	],
	"e2e": {
		"protractor": {
			"config": "src/test/webapp/protractor.conf.js"
		}
	},
	"lint": [
		{
			"project": "tsconfig.app.json",
			"exclude": "**/node_modules/**"
		},
		{
			"project": "tsconfig.spec.json",
			"exclude": "**/node_modules/**"
		},
		{
			"project": "src/test/webapp/e2e/tsconfig.e2e.json",
			"exclude": "**/node_modules/**"
		}
	],
	"test": {
		"karma": {
			"config": "src/test/webapp/karma.conf.js"
		}
	},
	"defaults": {
		"styleExt": "css",
		"serve": {
			"host": "0.0.0.0",
			"port": 9080,
			"ssl": false,
			"proxyConfig": "proxy.conf.json"
		},
		"component": {
			"inlineStyle": true,
			"inlineTemplate": false,
			"spec": false
		},
		"directive": {
			"spec": false
		},
		"guard": {
			"spec": false
		},
		"pipe": {
			"spec": false
		},
		"service": {
			"spec": false
		}
	},
	"packageManager": "yarn"
}
