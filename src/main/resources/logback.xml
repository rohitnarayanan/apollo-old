<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration debug="true">
	<!-- To enable JMX Management -->
	<jmxConfigurator />

	<appender name="SysoutAppender" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are by default assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<encoder>
			<pattern>
				%d;%logger;%thread;%level;%X{executionInfo.executionId};%msg |~|
				%throwable%n
			</pattern>
		</encoder>
	</appender>

	<logger name="org.springframework.boot.autoconfigure.security"
		level="info" additivity="false">
		<appender-ref ref="SysoutAppender" />
	</logger>

	<root level="info">
		<appender-ref ref="SysoutAppender" />
	</root>
</configuration>
